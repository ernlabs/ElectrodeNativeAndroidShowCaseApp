<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.walmartlabs.ern.showcase">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeepLinkRouterActivity"
            android:launchMode="standard">
            <intent-filter android:label="@string/route_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "walmart://ernâ€ -->
                <data
                    android:host="ern.walmart.com"
                    android:pathPrefix="/ern"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ElectrodeComponentActivity"
            android:launchMode="standard">
        </activity>
    </application>

</manifest>